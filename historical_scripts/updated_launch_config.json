{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "WitsV3: Test Mode (Non-Interactive)",
            "type": "python",
            "request": "launch",
            "program": "${workspaceFolder}/test_witsv3.py",
            "console": "integratedTerminal",
            "cwd": "${workspaceFolder}",
            "env": {
                "CURSOR_TEST_MODE": "1",
                "CI": "true"
            },
            "args": []
        },
        {
            "name": "WitsV3: Validate System",
            "type": "python",
            "request": "launch",
            "program": "${workspaceFolder}/run.py",
            "console": "integratedTerminal",
            "cwd": "${workspaceFolder}",
            "env": {
                "CURSOR_TEST_MODE": "1"
            },
            "args": ["--test"]
        },
        {
            "name": "WitsV3: Main Entry (CLI Mode)",
            "type": "python",
            "request": "launch",
            "program": "${workspaceFolder}/run.py",
            "console": "integratedTerminal",
            "cwd": "${workspaceFolder}",
            "args": []
        },
        {
            "name": "WitsV3: Background Agent",
            "type": "python",
            "request": "launch",
            "module": "agents.background_agent",
            "console": "integratedTerminal",
            "cwd": "${workspaceFolder}",
            "env": {
                "WITSV3_BACKGROUND_MODE": "true"
            }
        },
        {
            "name": "WitsV3: All Tests",
            "type": "python",
            "request": "launch",
            "module": "pytest",
            "console": "integratedTerminal",
            "cwd": "${workspaceFolder}",
            "args": [
                "tests/",
                "-v",
                "--tb=short",
                "--asyncio-mode=auto",
                "--cov=core",
                "--cov=agents", 
                "--cov=tools",
                "--cov-report=term-missing",
                "--cov-report=html"
            ]
        },
        {
            "name": "WitsV3: Debug Tests",
            "type": "python",
            "request": "launch",
            "module": "pytest",
            "console": "integratedTerminal",
            "cwd": "${workspaceFolder}",
            "args": [
                "tests/",
                "-v",
                "--tb=long",
                "--asyncio-mode=auto",
                "-s"
            ]
        },
        {
            "name": "WitsV3: Test Current File",
            "type": "python",
            "request": "launch",
            "module": "pytest",
            "console": "integratedTerminal",
            "cwd": "${workspaceFolder}",
            "args": [
                "${file}",
                "-v",
                "--tb=short",
                "--asyncio-mode=auto"
            ]
        },
        {
            "name": "WitsV3: Fast Tests (Unit Only)",
            "type": "python",
            "request": "launch",
            "module": "pytest",
            "console": "integratedTerminal",
            "cwd": "${workspaceFolder}",
            "args": [
                "tests/",
                "-v",
                "-m", "not slow",
                "--tb=short",
                "--asyncio-mode=auto"
            ]
        },
        {
            "name": "WitsV3: Core Tests Only", 
            "type": "python",
            "request": "launch",
            "module": "pytest",
            "console": "integratedTerminal",
            "cwd": "${workspaceFolder}",
            "args": [
                "tests/core/",
                "-v",
                "--tb=short",
                "--asyncio-mode=auto"
            ]
        },
        {
            "name": "WitsV3: Tools Tests Only",
            "type": "python",
            "request": "launch",
            "module": "pytest",
            "console": "integratedTerminal", 
            "cwd": "${workspaceFolder}",
            "args": [
                "tests/tools/",
                "-v",
                "--tb=short",
                "--asyncio-mode=auto"
            ]
        },
        {
            "name": "WitsV3: Agent Tests Only",
            "type": "python",
            "request": "launch",
            "module": "pytest",
            "console": "integratedTerminal",
            "cwd": "${workspaceFolder}",
            "args": [
                "tests/agents/",
                "-v", 
                "--tb=short",
                "--asyncio-mode=auto"
            ]
        }
    ]
}